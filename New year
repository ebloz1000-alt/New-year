    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Bible Verses Array
            const bibleVerses = [
                { text: "For I know the plans I have for you,â€ declares the Lord, â€œplans to prosper you and not to harm you, plans to give you hope and a future.", reference: "Jeremiah 29:11" },
                { text: "Therefore, if anyone is in Christ, the new creation has come: The old has gone, the new is here!", reference: "2 Corinthians 5:17" },
                { text: "Behold, I am doing a new thing; now it springs forth, do you not perceive it? I will make a way in the wilderness and rivers in the desert.", reference: "Isaiah 43:19" },
                { text: "The steadfast love of the Lord never ceases; his mercies never come to an end; they are new every morning; great is your faithfulness.", reference: "Lamentations 3:22-23" },
                { text: "But they who wait for the Lord shall renew their strength; they shall mount up with wings like eagles; they shall run and not be weary; they shall walk and not faint.", reference: "Isaiah 40:31" },
                { text: "Trust in the Lord with all your heart, and do not lean on your own understanding. In all your ways acknowledge him, and he will make straight your paths.", reference: "Proverbs 3:5-6" },
                { text: "And we know that for those who love God all things work together for good, for those who are called according to his purpose.", reference: "Romans 8:28" },
                { text: "May the Lord bless you and keep you; the Lord make his face shine on you and be gracious to you; the Lord turn his face toward you and give you peace.", reference: "Numbers 6:24-26" }
            ];
            
            let currentVerseIndex = 0;
            
            // Initialize verses carousel
            function initVersesCarousel() {
                const versesWrapper = document.getElementById('versesWrapper');
                const verseNav = document.getElementById('verseNav');
                
                versesWrapper.innerHTML = '';
                verseNav.innerHTML = '';
                
                bibleVerses.forEach((verse, index) => {
                    const slide = document.createElement('div');
                    slide.className = 'verse-slide';
                    slide.innerHTML = `<p class="verse-text">"${verse.text}"</p><p class="verse-reference">- ${verse.reference}</p>`;
                    versesWrapper.appendChild(slide);
                    
                    const dot = document.createElement('div');
                    dot.className = `verse-dot ${index === 0 ? 'active' : ''}`;
                    dot.dataset.index = index;
                    dot.addEventListener('click', () => goToVerse(index));
                    verseNav.appendChild(dot);
                });
                
                updateCarousel();
            }
            
            function updateCarousel() {
                const versesWrapper = document.getElementById('versesWrapper');
                versesWrapper.style.transform = `translateX(-${currentVerseIndex * 100}%)`;
                
                document.querySelectorAll('.verse-dot').forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentVerseIndex);
                });
            }
            
            function goToVerse(index) {
                currentVerseIndex = index;
                updateCarousel();
            }
            
            document.getElementById('nextVerse').addEventListener('click', () => {
                currentVerseIndex = (currentVerseIndex + 1) % bibleVerses.length;
                updateCarousel();
            });
            
            document.getElementById('prevVerse').addEventListener('click', () => {
                currentVerseIndex = (currentVerseIndex - 1 + bibleVerses.length) % bibleVerses.length;
                updateCarousel();
            });
            
            document.getElementById('randomVerse').addEventListener('click', () => {
                let newIndex = currentVerseIndex;
                while (newIndex === currentVerseIndex && bibleVerses.length > 1) {
                    newIndex = Math.floor(Math.random() * bibleVerses.length);
                }
                currentVerseIndex = newIndex;
                updateCarousel();
            });
            
            setInterval(() => {
                currentVerseIndex = (currentVerseIndex + 1) % bibleVerses.length;
                updateCarousel();
            }, 8000);
            
            // Countdown Timer
            function updateCountdown() {
                const now = new Date();
                const newYear = new Date('January 1, 2026 00:00:00');
                const diff = newYear - now;
                
                if (diff <= 0) {
                    document.querySelectorAll('.countdown-value').forEach(el => el.textContent = '00');
                    document.querySelector('.countdown-item:last-child .countdown-label').textContent = 'Welcome 2026!';
                    return;
                }
                
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                
                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            }
            
            setInterval(updateCountdown, 1000);
            updateCountdown();
            
            // Pre-filled WhatsApp messages (fixed â€“ now properly encoded)
            const baseMessage = "Happy New Year 2026 from Walk of Prayer Ministries! ðŸŽ‰ðŸ™%0A%0A";
            
            document.getElementById('prayerRequestBtn').href += encodeURIComponent(baseMessage + 
                "I'd like to share a prayer request:\n\n[Please type your prayer request here]\n\nName: [Your name]\n\nMay God bless you abundantly in 2026!");
            
            document.getElementById('thanksgivingBtn').href += encodeURIComponent(baseMessage + 
                "I'd like to share my thanksgiving:\n\n[Please share what you're thankful for]\n\nName: [Your name]\n\nTo God be the glory in 2026!");
            
            document.getElementById('testimonyBtn').href += encodeURIComponent(baseMessage + 
                "I'd like to share a testimony:\n\n[Please share your testimony here]\n\nName: [Your name]\n\nGod is good in 2026!");
            
            // Button press animation
            document.querySelectorAll('.prayer-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => this.style.transform = 'scale(1)', 200);
                });
            });
            
            // Celebrate Button Functionality
            const celebrateBtn = document.getElementById('celebrateBtn');
            celebrateBtn.addEventListener('click', function() {
                createConfetti();
                playCelebrationSound();
                
                const messages = [
                    "Hallelujah! Happy New Year 2026!",
                    "Praise God for a new beginning!",
                    "Celebrating God's faithfulness in 2026!",
                    "Welcome 2026 with joy and thanksgiving!",
                    "God's mercies are new every morning!"
                ];
                const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                
                const celebrationMsg = document.createElement('div');
                celebrationMsg.style.cssText = `
                    position: fixed;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    background: rgba(255, 215, 0, 0.95);
                    color: #1B5E20;
                    padding: 30px;
                    border-radius: 20px;
                    font-size: 2rem;
                    font-weight: 700;
                    text-align: center;
                    z-index: 1001;
                    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
                    animation: popIn 0.5s ease;
                `;
                celebrationMsg.innerHTML = `
                    <div style="margin-bottom: 20px; font-size: 3rem;">ðŸŽ‰ðŸŽŠ</div>
                    ${randomMessage}
                    <div style="margin-top: 20px; font-size: 1.5rem;">- Walk of Prayer Ministries</div>
                `;
                document.body.appendChild(celebrationMsg);
                
                setTimeout(() => {
                    celebrationMsg.style.opacity = '0';
                    celebrationMsg.style.transition = 'opacity 0.5s ease';
                    setTimeout(() => celebrationMsg.remove(), 500);
                }, 3000);
                
                this.style.animation = 'none';
                this.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    this.style.animation = 'pulse 2s infinite';
                    this.style.transform = 'scale(1)';
                }, 300);
            });
            
            function createConfetti() {
                const colors = ['#FFD700', '#FFA500', '#2E8B57', '#1B5E20', '#FFFFFF'];
                for (let i = 0; i < 100; i++) {
                    const confetti = document.createElement('div');
                    confetti.style.position = 'fixed';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.top = '-10px';
                    confetti.style.width = Math.random() * 10 + 5 + 'px';
                    confetti.style.height = confetti.style.width;
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
                    confetti.style.pointerEvents = 'none';
                    confetti.style.zIndex = '999';
                    document.body.appendChild(confetti);
                    
                    const animation = confetti.animate([
                        { transform: 'translateY(0) rotate(0deg)', opacity: 1 },
                        { transform: `translateY(${window.innerHeight + 20}px) rotate(${Math.random() * 720}deg)`, opacity: 0 }
                    ], {
                        duration: Math.random() * 3000 + 2000,
                        easing: 'cubic-bezier(0.215, 0.610, 0.355, 1)'
                    });
                    
                    animation.onfinish = () => confetti.remove();
                }
            }
            
            function playCelebrationSound() {
                try {
                    const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();
                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);
                    oscillator.frequency.value = 880;
                    oscillator.type = 'sine';
                    gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.5);
                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.5);
                } catch (e) {}
            }
            
            // Initialize carousel
            initVersesCarousel();
            
            // Easter egg
            document.querySelector('.year').addEventListener('dblclick', function() {
                const blessings = [
                    "May 2026 be your most blessed year yet!",
                    "God's favor and grace be upon you abundantly in 2026!",
                    "May your prayers in 2026 move mountains!",
                    "2026: A year of divine breakthroughs and miracles!",
                    "May God's peace guard your heart throughout 2026!"
                ];
                alert(blessings[Math.floor(Math.random() * blessings.length)] + "\n\n- Walk of Prayer Ministries");
            });
        });
   
    </script>
